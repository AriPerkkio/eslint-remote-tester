{
    "name": "eslint-remote-tester",
    "version": "0.3.0",
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "description": "Tool for running ESLint on multiple repositories",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "bin": "dist/index.js",
    "engines": {
        "node": ">=12.11"
    },
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc --project tsconfig.prod.json",
        "postbuild": "tscpaths --project tsconfig.prod.json --src ./lib --out ./dist",
        "watch": "nodemon --watch lib --ext ts,tsx --exec \"yarn build\"",
        "start": "nodemon --watch dist --no-stdin dist",
        "start:ci": "CI=true yarn start",
        "start:memory-limit-crash": "NODE_OPTIONS=--max_old_space_size=50 node dist",
        "test": "jest",
        "test:integration": "yarn test:integration:ci && yarn test:integration:cli",
        "test:integration:ci": "CI=true FORCE_COLOR=true jest --config jest.config.integration.js --runInBand integration.ci.test.ts",
        "test:integration:cli": "CI=false FORCE_COLOR=true jest --config jest.config.integration.js --runInBand integration.cli.test.ts",
        "lint:react": "node dist --config eslint-remote-tester.react.config.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AriPerkkio/eslint-remote-tester"
    },
    "homepage": "https://github.com/AriPerkkio/eslint-remote-tester",
    "bugs": "https://github.com/AriPerkkio/eslint-remote-tester",
    "dependencies": {
        "chalk": "^4.1.0",
        "ink": "^3.0.8",
        "react": "^16.14.0",
        "simple-git": "^2.20.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/eslint": "^7.2.2",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.10.1",
        "@types/react": "^16.9.53",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-local-rules": "^0.1.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": ">=4",
        "jest": "^26.6.1",
        "lint-staged": ">=10",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.3",
        "tscpaths": "^0.0.9",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "eslint": ">=7"
    },
    "keywords": [
        "eslint",
        "eslint-test"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ]
    }
}
