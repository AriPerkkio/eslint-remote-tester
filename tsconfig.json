{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "jsx": "react",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["lib/config"],
            "@config/*": ["lib/config/*"],
            "@engine": ["lib/engine"],
            "@engine/*": ["lib/engine/*"],
            "@file-client": ["lib/file-client"],
            "@file-client/*": ["lib/file-client/*"],
            "@progress-logger": ["lib/progress-logger"],
            "@progress-logger/*": ["lib/progress-logger/*"],
            "@ui": ["lib/ui"],
            "@ui/*": ["lib/ui/*"],
            "__mocks__/*": ["test/unit/__mocks__/*"]
        }
    },
    "include": ["lib", "test"]
}
